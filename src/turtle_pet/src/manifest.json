{
  "name": "Turtle Pet",
  "description": "oui",
  "version": "1.0",
  "permissions": [
    "storage", "activeTab", "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "TurtlePet's popup",
    "default_popup": "popup.html"
  },
  "web_accessible_resources":[{
  "resources": ["imgTurtle/*"],
  "matches": ["<all_urls>"]
  }],
  "manifest_version": 3
}